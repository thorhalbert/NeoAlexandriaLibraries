@inherits LayoutComponentBase

<MatThemeProvider Theme="@neotheme"></MatThemeProvider>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <div class="main">
        <div class="top-row px-4">
            <a href="https://docs.microsoft.com/aspnet/" target="_blank">About</a>
        </div>

        <div class="content px-4">
            @Body
        </div>
    </div>
</div>


@code
{

    MatTheme neotheme = new MatTheme()
    {
        Primary = MatThemeColors.BlueGrey._800.Value,
        Secondary = MatThemeColors.Green._300.Value,
    };
}